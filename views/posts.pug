doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    //- BootstrapのCSSとJavaScriptのテンプレートを読み込む
    link(rel="stylesheet",
         href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
         integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
         crossorigin="anonymous")

    title 秘密の匿名掲示板
  body.container
    div.my-3
      a(href="/logout").btn.btn-info.float-right ログアウト
      h1 秘密の匿名掲示板
    h2 新規投稿
    form(method="post" action="/posts")
      div.form-group
        textarea(name="content" rows="4").form-control
      div.form-gtoup
        button(type="submit").btn.btn-primary 投稿
    h2 投稿一覧
    each post in posts
      div.card.my-3
        //- header ユーザID
        div.card-header
          //- 管理人か否かを判定する
          - var isPostedByAdmin = (post.postedBy === 'admin')
          //- 管理人でない場合
          if isPostedByAdmin
              span #{post.id} 管理人★
          //- 一般ユーザの場合
          else
              span #{post.id} : ID:#{post.trackingCookie}
        //- body 投稿内容
        div.card-body
          p.card-text!= post.content
        //- footer 投稿日時・投稿者名・削除ボタン
        div.card-footer
          div
            p 投稿日時: #{post.formattedCreatedAt}
            //- 管理人の場合全ての投稿者を表示
            - var isAdmin = (user === 'admin')
            if isAdmin
                p 投稿者: #{post.postedBy}
            //- 自分の投稿のみ削除ボタンが表示
            - var isDeletable = (user === post.postedBy || isAdmin)
            if isDeletable
                form(method="post" action="/posts?delete=1")
                    input(type="hidden" name="id" value=post.id)
                    button(type="submit").btn.btn-danger.float-right 削除

    //- Bootstrapに必要となるjqueryとJavaScriptのソースコードを読み込む
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
           integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
           crossorigin="anonymous")